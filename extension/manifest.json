{
    "manifest_version": 2,

    "name": "Expedia Meta Partner Deals ",
    "description": "Expedia Meta Partner Deals",
    "version": "1.0",

    "browser_action": {
        "default_icon": "images/icon.png",
        "default_popup": "popup.html",
        "default_title": "Red"
    },
    "permissions": [
        "activeTab",
        "https://ajax.googleapis.com/",
        "https://www.tripadvisor.in/*"
    ],

    "content_scripts": [{
        "matches": ["https://www.tripadvisor.in/Hotels*"],
        "js": ["jquery-2.2.3.min.js", "hsrScript.js"],
        "css": ["widget.css"]
    }, {
        "matches": ["https://www.tripadvisor.in/Hotel_Review*"],
        "js": ["jquery-2.2.3.min.js", "hlpScript.js"],
        "css": ["widget.css"]
    }],
    "background": {
        "scripts": ["jquery-2.2.3.min.js", "popup.js"],
        "persistent": false
    },
    "web_accessible_resources": [
        "images/*",
        "templates/*.html"
    ]
}
