{
    "manifest_version": 2,

    "name": "Getting started example",
    "description": "This extension shows a Google Image search result for the current page",
    "version": "1.0",

    "browser_action": {
        "default_icon": "images/icon.png",
        "default_popup": "popup.html",
        "default_title": "Red"
    },
    "permissions": [
        "activeTab",
        "https://ajax.googleapis.com/",
        "https://www.tripadvisor.in/*"
    ],
    "content_scripts": [{
        "matches": ["https://www.tripadvisor.in/*"],
        "js": ["jquery-2.2.3.min.js", "jquery-ui.js", "hsrScript.js"],
        "css": ["widget.css"]
    }],
     "background": {
         "scripts": ["jquery-2.2.3.min.js", "popup.js"],
         "persistent": false
     },
    "web_accessible_resources": [
        "images/*",
        "templates/*.html"
    ]
}
